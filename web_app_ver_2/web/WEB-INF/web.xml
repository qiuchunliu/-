<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>web.servlet.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/registServlet</url-pattern><!-- 请求的servlet的url -->
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/updateServlet</url-pattern><!-- 请求的servlet的url -->
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>web.servlet.UpdateServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeletServlet</servlet-name>
        <servlet-class>web.servlet.DeletServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletServlet</servlet-name>
        <url-pattern>/deletServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindBookServlet</servlet-name>
        <servlet-class>web.servlet.FindBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindBookServlet</servlet-name>
        <url-pattern>/findBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindBookByConditionServlet</servlet-name>
        <servlet-class>web.servlet.FindBookByConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindBookByConditionServlet</servlet-name>
        <url-pattern>/findBookByConditionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>web.servlet.UpdateBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/updateBookServlet</url-pattern>
    </servlet-mapping>

</web-app>